<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondodanbo25" >

    <TextView
        android:id="@+id/LBLBNBUSUARIO"
        android:layout_width="480dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Buscando Usuario ...................."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/verdeoscuro"
        android:textSize="28sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ListView
        android:id="@+id/LSTOPCIONES"
        android:layout_width="310dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/LBLTITULMENU"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="38dp" >
    </ListView>

    <TextView
        android:id="@+id/LBLTITULMENU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/LSTOPCIONES"
        android:layout_below="@+id/LBLBNBUSUARIO"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="54dp"
        android:text="MENU"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grisoscuro"
        android:textSize="43sp" />

</RelativeLayout>